---
import Layout from "../layouts/Layout.astro";
import GraphVisualizer from "../components/GraphVisualizer";
---

<Layout title="Graph Visualizer">
  <main>
    <section class="graph_input">
      <form class="make_graph">
        <label for="vertices">Input vertices</label>
        <input
          type="text"
          id="vertices"
          name="vertices"
          placeholder="ex. 1,2,3..."
        />
        <label for="vertices">Input edges</label>
        <input
          type="text"
          id="edges"
          name="edges"
          placeholder="ex. 1,2 3,1..."
        />
        <label for="isOriented"
          >Oriented: <input
            type="checkbox"
            name="isOriented"
            id="isOriented"
          /></label
        >
        <button type="submit">Make</button>
        <h4 class="error"></h4>
      </form>
    </section>
    <GraphVisualizer client:load />
  </main>
</Layout>

<script src="../scripts/graph_input.ts"></script>

<style>
  main {
    width: 100%;
    height: 100%;
    /* max-width: calc(100% - 2rem); */
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
  .make_graph {
    display: flex;
    flex-direction: column;
  }
  .make_graph > label,
  .make_graph > input {
    font-size: 1rem;
  }
  .graph_input {
    display: flex;
    flex-direction: column;
    width: 40%;
    max-width: 200px;
    background-color: rgba(var(--accent-dark), 33%);
    border-radius: 10px;
    padding: 1rem;
    position: absolute;
    top: 2rem;
    left: 2rem;
  }
  .error {
    color: red;
    margin: 1rem 0 0 0;
  }
  .vertice {
    width: 2rem;
    height: 2rem;
    background-color: blanchedalmond;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
</style>
