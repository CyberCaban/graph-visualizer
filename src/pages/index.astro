---
import Layout from "../layouts/Layout.astro";
import GraphVisualizer from "../components/GraphVisualizer";
---

<Layout title="Graph Visualizer">
  <main>
    <div class="gui">
      <section class="gui_input graph_input">
        <button class="btn open_perf_sett">Settings</button>
        <form class="make_graph">
          <label for="vertices">Input vertices</label>
          <input
            type="text"
            id="vertices"
            name="vertices"
            placeholder="ex. 1,2,3..."
          />
          <label for="vertices">Input edges</label>
          <input
            type="text"
            id="edges"
            name="edges"
            placeholder="ex. 1,2 3,1..."
          />
          <label for="isOriented" id="isOriented_label" class="checkbox_label"
            >Oriented: <input
              type="checkbox"
              name="isOriented"
              id="isOriented_input"
              class="checkbox_input"
            /></label
          >
          <button type="submit" class="btn">Make</button>
          <h4 class="error"></h4>
        </form>
      </section>
      <section class="gui_input perf_settings">
        <label for="smooth_render" class="checkbox_label"
          >Smooth render: <input
            type="checkbox"
            name="smooth_render"
            id="smooth_render"
            class="checkbox_input"
          /></label
        >
        <label for="edge_color"
          >Edge Color <br /><span class="tip">not functional yet</span></label
        >
        <input type="color" name="edge_color" id="" />
      </section>
    </div>
    <GraphVisualizer client:load />
  </main>
</Layout>

<script src="../scripts/graph_input.ts"></script>
<script src="../scripts/perf_settings.ts"></script>

<style>
  main {
    width: 100%;
    height: 100%;
    /* max-width: calc(100% - 2rem); */
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
  .btn {
    color: rgb(204, 204, 204);
    padding: 8px 12px;
    font-size: 1rem;
    font-weight: 800;
    font-family: "Semplicita Pro";
    background-color: rgba(var(--color), 100%);
    border-radius: 10px;
    border: none;
    /* border: 1px solid rgba(var(--accent)); */
    transition: 0.1s;
  }
  .btn:hover {
    background-color: rgba(var(--color), 70%);
  }
  input {
    accent-color: rgba(var(--color), 70%);
    border: 2px solid white;
    border-radius: 0.25rem;
    background-color: rgb(245, 239, 255);
    font-weight: 500;
    height: 1.5rem;
  }
  input:checked {
    background-color: black;
  }
  input:focus {
    background-color: rgb(245, 240, 255);
  }
  .gui {
    display: flex;
    flex-flow: row wrap;
    align-items: start;
    padding: 1rem;
    margin: 1rem;
    position: absolute;
    z-index: 2;
  }
  .gui_input {
    display: flex;
    flex-direction: column;
    /* width: 40%; */
    max-width: 200px;
    background-color: rgba(var(--accent-dark), 33%);
    border-radius: 10px;
    padding: 1rem;
    margin: 0.2rem;
  }
  .graph_input {
  }
  .open_perf_sett {
  }
  .perf_settings {
    /* margin: 0 0.5rem; */
  }
  .make_graph {
    display: flex;
    flex-direction: column;
  }
  .make_graph > label,
  .make_graph > input {
    font-size: 1rem;
  }
  .tip {
    color: rgb(130, 130, 130);
  }
  .checkbox_label {
    display: flex;
    font-size: 1rem;
  }
  .checkbox_input {
    margin: 3px 3px 0 3px;
  }
  .error {
    color: red;
    margin: 1rem 0 0 0;
  }
  .vertice {
    width: 2rem;
    height: 2rem;
    background-color: blanchedalmond;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
</style>
